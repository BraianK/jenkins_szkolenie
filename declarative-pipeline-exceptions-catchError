pipeline {
    agent {
        node 'slave01'
    }
    parameters {
        choice choices: ['dev','stage','demo','prod'], description: 'Å›rodowisko', name: 'environment'
    }
    stages{
        stage('Pull image 1'){
            steps{
                echo "executing"
                sh "docker pull alpine:3.19"
            }     
        }
        stage('Pull image 2'){
            steps{
                script{
                    catchError(buildResult: 'UNSTABLE', stageResult: 'FAILURE'){
                        echo "executing failure"
                        sh "docker pull randomimagenotfund"
                    }
                }
            }     
        }
    }
}
